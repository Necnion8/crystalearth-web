---
import SidebarLink from './SidebarLink.astro';
import { SITE_TITLE } from '../consts';
---

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<aside class="sidebar">
  <header class="sidebar-header">
      <a href="#" class="header-logo">
          <img src="../src/img/logo.png" alt="CrystalEarth">
      </a>
  </header>

  <nav class="sidebar-nav">
    <ul class="nav-list primary-nav">
      <li class="nav-item">
          <a href="#" class="nav-link">
              <span><ion-icon name="bookmark" class="nav-icon"></ion-icon></span>
          </a>
          <span class="nav-tooltip">初心者ガイド</span>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">
          <span><ion-icon name="newspaper" class="nav-icon"></ion-icon></span>
        </a>
        <span class="nav-tooltip">お知らせ</span>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">
          <span><ion-icon name="calendar" class="nav-icon"></ion-icon></span>
        </a>
        <span class="nav-tooltip">カレンダー</span>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">
          <span><ion-icon name="map" class="nav-icon"></ion-icon></span>
        </a>
        <span class="nav-tooltip">マップ</span>
      </li>
    </ul>

    <ul class="nav-list secondary-nav">
      <li class="nav-item">
        <a href="#" class="nav-link">
          <span><ion-icon name="Storefront" class="nav-icon"></ion-icon></span>
        </a>
        <span class="nav-tooltip">ショップ</span>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">
          <span><ion-icon name="document" class="nav-icon"></ion-icon></span>
        </a>
        <span class="nav-tooltip">Wiki</span>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">
          <span><ion-icon name="logo-discord" class="nav-icon"></ion-icon></span>
        </a>
        <span class="nav-tooltip">Discord</span>
      </li>
    </ul>
  </nav>
</aside>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .sidebar {
    width: 85px;
    position: fixed;
    height: 100vh;
    background: #151A2D;
  }

  .sidebar-header {
    display: flex;
    padding: 25px 20px;
    align-items: center;
    justify-content: space-between;
  }

  .sidebar-header .header-logo img {
    width: 46px;
    height: 46px;
    display: block;
    object-fit: contain;
    border-radius: 50%;
  }

  .sidebar-nav .nav-list {
    list-style: none;
    display: flex;
    gap: 4px;
    padding: 0 15px;
    flex-direction: column;
    transform: translateY(15px);
  }

  .sidebar-nav .nav-link {
    color: #fff;
    display: flex;
    white-space: nowrap;
    gap: 12px;
    border-radius: 8px;
    align-items: center;
    padding: 15px 12px 8px 13.5px;
    text-decoration: none;
    transition: 0.4s ease;
  }

  .sidebar-nav .nav-link:hover {
    color: #151A2D;
    background: #fff;
  }

  .sidebar-nav .secondary-nav {
    position: absolute;
    bottom: 30px;
    width: 100%;
  }

  .sidebar-nav .nav-item {
    position: relative;
  }

  .sidebar-nav .nav-tooltip {
    position: absolute;
    top: -10px;
    opacity: 0;
    pointer-events: none;
    left: calc(100% + 25px);
    color: #151A2D;
    background: #fff;
    padding: 6px 12px;
    border-radius: 8px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    white-space: nowrap;
    transition: 0s;
  }

  .sidebar-nav .nav-item:hover .nav-tooltip {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(50%);
    transition: 0.4s ease;
  }

  ion-icon {
    font-size: 28px;
    align-items: center;
  }


</style>

